{
  "version": "0.1.0",
  "tasks": [
    {
      "taskName": "record",
      "windows": { "command": "nvs.exe" },
      "osx": { "command": "nvs" },
      "linux": { "command": "nvs" },
      "args": [
        "run",
        "chakracore/8.0.0-pre3",
        "--record",
        "${workspaceRoot}/index.js"
      ],
      "isShellCommand": true,
      "showOutput": "always"
    }
  ]
}